<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.jayxu.playground</groupId>
	<artifactId>playground-parent</artifactId>
	<version>1.0</version>
	<url>https://github.com/mustangxu/playground</url>
	<scm>
		<url>https://github.com/mustangxu/playground.git</url>
	</scm>
	<issueManagement>
		<system>Github</system>
		<url>https://github.com/mustangxu/playground/issues</url>
	</issueManagement>
	<properties>
		<graalvm.version>21.3.0</graalvm.version>
		<skywalking.version>8.8.0</skywalking.version>
	</properties>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.7.0-M1</version>
	</parent>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.data</groupId>
				<artifactId>spring-data-bom</artifactId>
				<version>2021.1.0</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<layers>
						<enabled>true</enabled>
					</layers>
				</configuration>
			</plugin>
			<plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<configuration>
					<offline>true</offline>
                    <!-- <useNativeGit>true</useNativeGit> -->
					<runOnlyOnce>true</runOnlyOnce>
                    <!-- <generateGitPropertiesFile>true</generateGitPropertiesFile> -->
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.spotify</groupId>
					<artifactId>dockerfile-maven-plugin</artifactId>
					<version>1.4.13</version>
					<configuration>
						<skipBuild>true</skipBuild>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<packaging>pom</packaging>
	<modules>
		<module>java-playground</module>
        <!-- <module>java-newfeature</module> -->
	</modules>
	<pluginRepositories>
        <!-- <pluginRepository>
            <id>spring-release</id>
            <name>Spring release</name>
            <url>https://repo.spring.io/release</url>
        </pluginRepository> -->
		<pluginRepository>
			<id>spring-milestones</id>
			<url>https://repo.spring.io/milestone</url>
		</pluginRepository>
	</pluginRepositories>
	<repositories>
        <!-- <repository>
            <id>spring-release</id>
            <name>Spring release</name>
            <url>https://repo.spring.io/release</url>
        </repository> -->
		<repository>
			<id>spring-milestones</id>
			<url>https://repo.spring.io/milestone</url>
		</repository>
		<repository>
			<id>space-maven</id>
			<url>https://maven.pkg.jetbrains.space/jayxu/p/playground/maven</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>space-maven</id>
			<url>https://maven.pkg.jetbrains.space/jayxu/p/playground/maven</url>
		</repository>
	</distributionManagement>
</project>
